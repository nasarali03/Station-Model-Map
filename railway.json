{
  "services": [
    {
      "name": "flask-service",
      "source": {
        "type": "github",
        "repo": "https://github.com/nasarali03/Station-Model-Map",
        "dir": "."
      },
      "build": {
        "env": {
          "PYTHON_VERSION": "3.12"
        }
      },
      "deploy": {
        "startCommand": "python app.py",
        "env": {
          "SHARED_STORAGE_PATH": "/data/shared"
        },
        "volumes": [
          {
            "name": "shared-data",
            "mountPath": "/data/shared"
          }
        ],
        "resources": {
          "cpu": "shared",
          "memory": "512"
        }
      }
    },
    {
      "name": "downloader-service",
      "source": {
        "type": "github",
        "repo": "https://github.com/nasarali03/Station-Model-Map",
        "dir": "python"
      },
      "build": {
        "env": {
          "PYTHON_VERSION": "3.9"
        }
      },
      "deploy": {
        "startCommand": "python main.py",
        "env": {
          "SHARED_STORAGE_PATH": "/data/shared"
        },
        "volumes": [
          {
            "name": "shared-data",
            "mountPath": "/data/shared"
          }
        ],
        "resources": {
          "cpu": "shared",
          "memory": "512"
        }
      }
    }
  ]
}
